<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/azul_cinza"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/txt_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded"
            android:backgroundTint="@color/abobora"
            android:minHeight="48dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:layout_marginVertical="24dp"
            android:textColorHint="@color/azul_cinza"
            android:hint="nome do arquivo" />

        <Button
            android:id="@+id/btn_ver"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded"

            android:text="ver" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="16dp"
            android:orientation="horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/flt_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:srcCompat="@drawable/ic_baseline_camera_alt_24" />

            <EditText
                android:id="@+id/txt_foto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="nome da foto:"
                android:background="@drawable/rounded"
                android:minHeight="48dp"
                android:backgroundTint="@color/abobora"
                android:textAlignment="center"
                android:inputType="textPersonName"
                android:textColorHint="@color/azul_cinza" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_salvar_foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="16dp"
            android:background="@drawable/rounded"

            android:text="salvar" />

        <Button
            android:id="@+id/btn_foto_ver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded"
            android:text="verfoto" />

        <ImageView
            android:id="@+id/img_result"
            android:layout_width="match_parent"
            android:layout_height="182dp"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/txt_result"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:text="TextView"
            android:textColor="@color/abobora"
            android:textAlignment="center"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>

